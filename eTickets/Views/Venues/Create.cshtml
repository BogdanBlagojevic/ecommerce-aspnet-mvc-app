@model Venue

@{
    ViewData["Title"] = "Dodaj novo mesto";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Dodaj novo mesto održavanja</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" id="VenueLogoPreview" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-lable"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-lable"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-lable"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Dodaj" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Prikaži sve</a>
                    </div>
                </form>

            </div>

        </div>

    </div>

</div>

@section Scripts{
    <script>
        
        $(document).ready(function () {
            var output = document.getElementById('VenueLogoPreview');
            output.src = $("#Logo").val();
        })


        $("#Logo").on("change", function () {
            var output = document.getElementById('VenueLogoPreview');
            output.src = $(this).val();
        })
    </script>
}
