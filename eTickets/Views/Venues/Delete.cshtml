@model Venue
@{
    ViewData["Title"] = "Obrišite mesto";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Obrišite podatke za @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

              
                   
                    <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" id="VenueLogoPreview" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-lable"></label>
                        <input asp-for="Logo" class="form-control" readonly />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-lable"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-lable"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Potvrdi" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Prikaži sve</a>
                    </div>
               

            </div>

        </div>

    </div>

</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('VenueLogoPreview');
            output.src = $("#Logo").val();
        })


        $("#Logo").on("change", function () {
            var output = document.getElementById('VenueLogoPreview');
            output.src = $(this).val();
        })
    </script>
}
