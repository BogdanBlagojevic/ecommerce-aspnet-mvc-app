@model Performer

@{
    ViewData["Title"] = "Uredi izvođača";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Uredi izvođača</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" id="ProfilePicturePreview" />

                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-lable"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-lable"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-lable"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Uredi" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Prikaži sve</a>
                    </div>
                </form>

            </div>

        </div>

    </div>

</div>

@section Scripts{
    <script>
        
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })


        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
